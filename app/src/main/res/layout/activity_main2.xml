<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/purple_100">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity2">

        <TextView
            android:id="@+id/AdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:paddingBottom="30dp"
            android:text="Administrator View"
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/setTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AdminTitle"
            android:paddingBottom="7dp"
            android:layout_marginLeft="20dp"
            android:text="Click the button to set the time of the voting"
            />

        <ImageView
            android:id="@+id/timeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/AdminTitle"
            app:layout_constraintLeft_toRightOf="@+id/setTimeText"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_timelapse_24"
            android:onClick="TimePickerFragment"/>

        <TextView
            android:id="@+id/setDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setTimeText"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:text="Click the button to set the date of the voting"
            />

        <ImageView
            android:id="@+id/dateImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/timeImg"
            app:layout_constraintLeft_toRightOf="@+id/setDateText"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_calendar_month_24"
            android:onClick="DatePickerFragment"/>

        <View
            android:id="@+id/my_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dateImg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/addVoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setDateText"
            android:layout_marginLeft="10dp"
            android:text="Add poll question below"
            />

        <EditText
            android:id="@+id/VoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/addVoteText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:lines="3"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/addVotingOpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/VoteText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Add poll options below"
            />

        <EditText
            android:id="@+id/Option1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/addVotingOpt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:lines="2"
            android:background="@drawable/border"
            />

        <EditText
            android:id="@+id/Option2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/addVotingOpt"
            app:layout_constraintLeft_toRightOf="@+id/Option1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:background="@drawable/border"
            />

        <EditText
            android:id="@+id/Option3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/addVotingOpt"
            app:layout_constraintLeft_toRightOf="@+id/Option2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:background="@drawable/border"
            />
        <EditText
            android:id="@+id/Option4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Option1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="75dp"
            android:lines="2"
            android:background="@drawable/border"
            />

        <EditText
            android:id="@+id/Option5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Option2"
            app:layout_constraintLeft_toRightOf="@+id/Option4"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:background="@drawable/border"
            />

        <Button
            android:id="@+id/addPollQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Option5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="7dp"
            android:text="Add Poll Question"
            />

        <TextView
            android:id="@+id/ActiveVotingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/addPollQuestion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="30dp"
            android:text="Active Voting Results"
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/VotingResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ActiveVotingTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Choose poll result"
            />


        <Button
            android:id="@+id/VoteResult1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/VotingResultText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="7dp"
            android:text="Results 1"
            />

        <Button
            android:id="@+id/VoteResult2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/VotingResultText"
            app:layout_constraintLeft_toRightOf="@+id/VoteResult1"
            android:layout_marginLeft="5dp"
            android:text="Results 2"
            />

        <Button
            android:id="@+id/VoteResult3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/VotingResultText"
            app:layout_constraintLeft_toRightOf="@+id/VoteResult2"
            android:layout_marginLeft="5dp"
            android:text="Results 3"
            />

        <TextView
            android:id="@+id/VotersLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/VoteResult2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="30dp"
            android:text="Voting Area"
            android:textStyle="bold"
            android:textSize="18dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

